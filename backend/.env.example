# =============================================================================
# InvoiceÂ³ Backend Configuration
# =============================================================================

# -----------------------------------------------------------------------------
# REQUIRED: AI Service API Keys
# -----------------------------------------------------------------------------

# LandingAI API Key for document extraction
# Get your key at: https://landing.ai
LANDINGAI_API_KEY=your_landingai_api_key_here

# Google Gemini API Key for LLM validation
# Get your key at: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# -----------------------------------------------------------------------------
# OPTIONAL: Database Configuration
# -----------------------------------------------------------------------------

# Database URL - supports SQLite or PostgreSQL
# SQLite (default):
DATABASE_URL=sqlite:///invoice3.db

# PostgreSQL (production):
# DATABASE_URL=postgresql://user:password@localhost:5432/invoice3

# -----------------------------------------------------------------------------
# OPTIONAL: Application Settings
# -----------------------------------------------------------------------------

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Maximum file upload size in MB
MAX_UPLOAD_SIZE_MB=10

# API server configuration
HOST=0.0.0.0
PORT=8000

# Enable auto-reload during development
RELOAD=true

# -----------------------------------------------------------------------------
# OPTIONAL: Advanced Settings
# -----------------------------------------------------------------------------

# LLM temperature for validation agents (0.0-1.0)
LLM_TEMPERATURE=0.15

# Background task processing timeout (seconds)
PROCESSING_TIMEOUT=300
